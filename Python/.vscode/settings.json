{
    "python.pythonPath": "C:\\Users\\USER\\AppData\\Local\\Microsoft\\WindowsApps\\python3.8.exe",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "files.trimTrailingWhitespace": true, // 儲存的時候，會幫你自動過濾多餘的空格
    "files.autoSave": "onFocusChange", // 是否自動儲存檔案
    "[python]":{  // 加入這幾行
        "editor.formatOnType": true,
        "editor.formatOnSave": false, //存檔時不進行自動排版
        // "editor.renderIndentGuides": true, // 顯示縮排線
        "editor.insertSpaces": true,
        "editor.detectIndentation": true,
        "editor.tabSize": 4
    },
}